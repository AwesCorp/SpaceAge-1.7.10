package skylordjoelcore;

import java.util.Arrays;

import skylordjoelcore.vip.VIP;

import cpw.mods.fml.common.Mod;
import cpw.mods.fml.common.ModMetadata;
import cpw.mods.fml.common.SidedProxy;
import cpw.mods.fml.common.Mod.EventHandler;
import cpw.mods.fml.common.Mod.Instance;
import cpw.mods.fml.common.event.FMLInitializationEvent;
import cpw.mods.fml.common.event.FMLPreInitializationEvent;
import cpw.mods.fml.common.network.NetworkMod;
import cpw.mods.fml.common.registry.GameRegistry;

@Mod(modid=SkylordJoelCore.modid, name="SkylordJoel Core", version="Alpha")
//@NetworkMod(clientSideRequired=true, serverSideRequired=false)

public class SkylordJoelCore {
	public static final String modid = "SLJCore";
	
	@SidedProxy(clientSide = "skylordjoelcore.ClientProxy", serverSide = "skylordjoelcore.CommonProxy")
	public static CommonProxy proxy;
	
	//public static VIP vipManager = new VIP();
	
	@Instance("SLJCore")
	public static SkylordJoelCore instance;
	
    @Mod.Metadata(SkylordJoelCore.modid)
    public static ModMetadata metadata;
    
	@EventHandler
	public void preInit(FMLPreInitializationEvent event) {
		metadata.modId = this.modid;
		metadata.name = "SkylordJoel Core";
	    metadata.description = "Required Library/Dependancy/Whatever for all mods by SkylordJoel";
	    metadata.url = "";
	    metadata.logoFile = "";
	    metadata.version = "Alpha";
	    metadata.authorList = Arrays.asList(new String[] { 
	    		"SkylordJoel"
	    		});
	    metadata.credits = "SkylordJoel";
	    metadata.autogenerated = false;
	}
	
	@EventHandler
	public void init(FMLInitializationEvent event) {
		GameRegistry.registerPlayerTracker(new PlayerTracker());
		
		proxy.load();
		proxy.registerRenderers();
	}
}